---
import BaseLayaout from "./BaseLayaout.astro";
const { frontmatter } = Astro.props;
const { title, description, pubDate, author, image} = frontmatter;

---
<BaseLayaout pageTitle = {title}>
<p>Publicado el {pubDate.slice(0, 10)}</p>
<p><em>{description}</em></p>
<p>Escrito por {author}</p>
<img src={image.url} width='300' alt={image.alt}>
<div class="tags">
  {frontmatter.tags.map((tag) => (
    <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
  ))}
</div>
<hr>
<slot />
</BaseLayaout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>